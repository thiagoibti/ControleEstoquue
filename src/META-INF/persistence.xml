  <persistence-unit name="ControleEstoquePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>controleestoque.Fornecedor</class>
    <class>controleestoque.Lote</class>
    <class>controleestoque.Material</class>
    <class>controleestoque.Entrada</class>
    <class>controleestoque.Saida</class>
    <class>model.Material</class>
    <class>model.Fornecedor</class>
    <class>model.Entrada</class>
    <class>model.Saida</class>
    <class>model.Lote</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Estoque"/>
      <property name="javax.persistence.jdbc.password" value=""/>
